# Example Environment Variables

# Copy this file to .env for local development
# For Render deployment, add these in the Render dashboard

# Database Configuration
DATABASE_HOST=your-postgres-host.render.com
DATABASE_PORT=5432
DATABASE_NAME=freshvibes
DATABASE_USERNAME=freshvibes_user
DATABASE_PASSWORD=your_secure_password

# Cloudinary Configuration (REQUIRED - Get from cloudinary.com dashboard)
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here

# Server Configuration
PORT=8080
